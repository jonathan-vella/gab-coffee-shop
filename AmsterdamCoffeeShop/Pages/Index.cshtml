@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center mb-5" style="background-image: url('/images/coffee-hero.jpg'); background-size: cover; color: white; padding: 120px 0; position: relative;">
    <div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0,0,0,0.5);"></div>
    <div style="position: relative; z-index: 1;">
        <h1 class="display-3 fw-bold mb-4">Amsterdam Coffee Experience</h1>
        <p class="lead mb-4">Bringing the rich tradition of Amsterdam's finest coffee direct to your door</p>
        <a href="/Order" class="btn btn-primary btn-lg px-4">Order Now</a>
    </div>
</div>

<div class="container">
    <div class="row mb-5">
        <div class="col-md-6">
            <h2>Our Story</h2>
            <p>Founded in the heart of Amsterdam, our coffee shop brings you authentic Dutch-style coffee made with beans sourced from the finest coffee regions around the world. We believe great coffee is not just a beverage, but an experience that brings people together.</p>
            <p>Every cup we serve honors the rich coffee traditions while incorporating modern brewing technologies to deliver the perfect balance of flavor, aroma, and strength.</p>
        </div>
        <div class="col-md-6">
            <img src="/images/coffee-shop.jpg" alt="Our Amsterdam Coffee Shop" class="img-fluid rounded" />
        </div>
    </div>

    <h2 class="text-center mb-4">Featured Products</h2>
    <div class="row">
        @foreach (var product in Model.FeaturedProducts)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="fw-bold">€@product.Price.ToString("0.00")</p>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a href="/Order?productId=@product.Id" class="btn btn-outline-primary">Add to Order</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-5">
        <div class="col-md-12 text-center">
            <h2>Join Our Coffee Club</h2>
            <p class="lead">Subscribe to receive exclusive offers, brewing tips, and updates</p>
            <form method="post" class="row justify-content-center">
                <div class="col-md-5 mb-3">
                    <input type="email" asp-for="Email" class="form-control form-control-lg" placeholder="Enter your email">
                </div>
                <div class="col-md-2 mb-3">
                    <button type="submit" class="btn btn-primary btn-lg w-100" asp-page-handler="Subscribe">Subscribe</button>
                </div>
                <div class="col-md-12">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="MarketingConsent" id="marketingConsent">
                        <label class="form-check-label" for="marketingConsent">
                            I agree to receive marketing communications
                        </label>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
